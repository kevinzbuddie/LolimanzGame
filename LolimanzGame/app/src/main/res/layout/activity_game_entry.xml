<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.gamezone.loliman.lolimanzgame.LoginActivity">


    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="@dimen/icon_width"
        android:layout_height="@dimen/icon_height"/>

    <RelativeLayout
        android:id="@+id/start_game_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/id_difficulty"
            android:layout_width="match_parent"
            android:layout_height="@dimen/icon_height"
            android:background="@drawable/edit_shape"
            android:layout_marginTop="@dimen/icon_height"
            android:hint="@string/input_difficulty"
            android:inputType="numberDecimal"
            android:textAlignment="center"/>

        <Button
            android:id="@+id/start_game_button"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/id_difficulty"
            android:layout_marginTop="42dp"
            android:background="@drawable/btn_shape"
            android:text="@string/start_game"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:textStyle="bold" />

    </RelativeLayout>
</LinearLayout>
