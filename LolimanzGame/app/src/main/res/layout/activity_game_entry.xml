<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.gamezone.loliman.lolimanzgame.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <GridView
            android:id="@+id/id_game_set_entries"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="4" />

        <EditText
            android:id="@+id/id_difficulty"
            android:layout_width="match_parent"
            android:layout_height="@dimen/icon_height"
            android:layout_marginTop="30dp"
            android:background="@drawable/edit_shape"
            android:layout_below="@id/id_game_set_entries"
            android:hint="@string/input_difficulty"
            android:inputType="numberDecimal"
            android:textAlignment="center" />

        <Button
            android:id="@+id/start_game_button"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/id_difficulty"
            android:layout_marginTop="42dp"
            android:background="@drawable/btn_shape"
            android:text="@string/start_game"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:textStyle="bold" />

    </RelativeLayout>
</LinearLayout>
